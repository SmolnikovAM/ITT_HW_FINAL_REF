{
  "name": "itt_final_backend",
  "version": "1.0.0",
  "description": "refactoring of final project",
  "main": "index.js",
  "scripts": {
    "start": "better-npm-run start",
    "seed": "better-npm-run seed",
    "test": "better-npm-run test",
    "dev": "better-npm-run dev"
  },
  "betterScripts": {
    "start": {
      "command": "node ./index.js",
      "env": {
        "ITTALENTS_autostart": true
      }
    },
    "dev": {
      "command": "nodemon ./index.js",
      "env": {
        "ITTALENTS_autostart": true
      }
    },
    "test": {
      "command": "jest",
      "env": {
        "ITTALENTS_test": true,
        "ITTALENTS_autostart": false,
        "JWT_connection": "./tests/__data",
        "ITTALENTS_jwtSecret": "TEST"
      }
    },
    "seed": {
      "command": "node ./scripts/seed/runScript.js",
      "env": {
        "ITTALENTS_dbForce": true,
        "ITTALENTS_insertTestValues": true,
        "ITTALENTS_db__params__logging": true,
        "ITTALENTS_test": false
      }
    }
  },
  "author": "Andrei Smolnikov",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "trailingComma": true
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "globals": {
      "ITTALENTS_test": true
    },
    "transform": {
      "^.+\\.mjs$": "babel-jest",
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "moduleFileExtensions": [
      "node",
      "mjs",
      "js",
      "json",
      "ts",
      "tsx"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never",
          "jsx": "never",
          "mjs": "never"
        }
      ]
    },
    "settings": {},
    "env": {
      "node": true,
      "jest": true
    }
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-preset-env": "^1.7.0",
    "better-npm-run": "^0.1.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "regenerator-runtime": "^0.12.1",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.4"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "ajv": "^6.5.3",
    "bcryptjs": "^2.4.3",
    "esm": "^3.0.79",
    "inversify": "^4.13.0",
    "jsonwebtoken": "^8.3.0",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.5.0",
    "koa-router": "^7.4.0",
    "parse-strings-in-object": "^1.2.0",
    "rc": "^1.2.8",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^4.38.0",
    "sqlite3": "^4.0.2",
    "uuid": "^3.3.2"
  }
}
